<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../../partials/global-meta.ejs %>
        <title><%= appSettings.appName %></title>
        <% include ../../partials/global-link.ejs %>
        <% include ../../partials/global-script.ejs %>
    </head>
    <body ng-app="app" ng-controller="dashboardCtrl as dashboard">
        <header>
            <% include ../../partials/global-navbar.ejs %>
            <div class="container pt-4">
                <h4>Admin Dashboard</h4>
                <hr />
            </div>
        </header>
        <main>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-md-6" ng-repeat="item in dashboard.items track by $index">
                        <a href="{{item.link}}" class="d-block rounded border m-2">
                            <div class="p-3">
                                <table>
                                    <tr>
                                        <td>
                                            <img class="rounded-circle bg-dark dashboard-item" src="/assets/img/icons/generic.png" />
                                        </td>
                                        <td class="w-100">
                                            <h5 class="text-dark">{{item.name}}</h5>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </main>
        <footer>
            <% include ../../partials/global-footer.ejs %>
        </footer>
        <script>
            angular.module('app', [])
                .controller('dashboardCtrl', function () {
                    var dashboard = this;
                    dashboard.items = [
                        {name: 'Manage Declared Disasters', link: '/'},
                        {name: 'Manage Disaster Types', link: '/'},
                        {name: 'Manage Disaster Grouping', link: '/'},
                        {name: 'Manage Evacuation Centers', link: '/'},
                        {name: 'Manage Users', link: '/admin/manage-users'},
                        {name: 'Manage Places', link: '/admin/manage-places'},
                        {name: 'Manage News Feed', link: '/'}
                    ]
                });
        </script>
    </body>
</html>